<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <ImageView
        android:id="@+id/recommendation_imageView"
        android:layout_width="120dp"
        android:layout_height="120dp" />
    
    <TextView
        android:id="@+id/recommendation_imageView_name"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="11111111111111111111"
        android:layout_below="@id/recommendation_imageView"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/recommendation_imageView_info"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/recommendation_imageView_name"
        android:text="222222222"
        android:layout_marginTop="2dp"
        android:textColor="@color/gray"/>
</RelativeLayout>