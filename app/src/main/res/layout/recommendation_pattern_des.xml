<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">
    
    <ImageView
        android:id="@+id/recommendation_des_imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        tools:ignore="ContentDescription"
        android:layout_marginStart="1.5dp"
        android:layout_marginEnd="1.5dp"/>
    
    <TextView
        android:id="@+id/recommendation_des_name"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="11111111111111111111"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="12sp"
        android:layout_below="@id/recommendation_des_imageView"
        android:layout_marginTop="5dp"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/recommendation_des_info"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/recommendation_des_name"
        android:text="222222222"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="11sp"
        android:textColor="@color/gray"/>
</RelativeLayout>